                                        <option value="Google UK English Male">Google UK English Male</option> --}}
                                    </select>
                                </div>
                            </label>
                        </div>

                        <div class="col-lg-3">
                            <label class="m-2">
                                    <span>Volume  </span>
                                    <div>
                                    <input type="range" id="volumeSlider" min="0" max="1" step="0.1" value="1">
                                    </div>
                            </label>
                        </div>

                        <div class="col-lg-3">       
                            <label class="m-2">
                                    <span>Rate    </span>
                                    <div>
                                    <input type="range" id="rateSlider" min="0" max="1" step="0.1" value="0.9">
                                    </div>
                            </label>
                        </div>

                        <div class="col-lg-3">
                            <label class="m-2">
                                    <span>Pitch   </span>
                                    <div>
                                    <input type="range" id="pitchSlider" min="0" max="2" step="0.1" value="0.8">
                                    </div>
                            </label>
                        </div>


                    </div>                           
                  
                    <div>
                        <input class="mt-4 btn btn-lg btn-primary" id="testBtn" value="Test"/>
